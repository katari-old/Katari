#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<settings>
  <!-- Sample mirror entry, with sonar support. Don't put a space between * and
       !sonar or some versions of maven won't work correctly. -->
  <!--
  <mirrors>
    <mirror>
      <id>nexus</id>
      <url>http://maven.corp.globant.com/nexus/content/groups/public</url>
      <mirrorOf>*,!sonar</mirrorOf>
    </mirror>
  </mirrors>
  -->
  <profiles>
    <profile>
      <id>${clientName}_${projectName}</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <${clientName}_${projectName}.datasource.url>
         jdbc:mysql://localhost/${clientName}_${projectName}
        </${clientName}_${projectName}.datasource.url>
        <${clientName}_${projectName}.datasource.username>
          ${clientName}_${projectName}
        </${clientName}_${projectName}.datasource.username>
        <${clientName}_${projectName}.datasource.password>
          ${clientName}_${projectName}
        </${clientName}_${projectName}.datasource.password>
        <!-- Starts cargo with jpda enabled for remote debugging in port 8000.
             -->
        <${clientName}_${projectName}.cargo.jvmargs>
          -Xdebug -Xnoagent -Djava.compiler=NONE
          -Xrunjdwp:transport=dt_socket,address=8000,server=y,suspend=n
        </${clientName}_${projectName}.cargo.jvmargs>
        <!-- You can add log4j configuration options here. -->
        <${clientName}_${projectName}.log4j>
          log4j.logger.com.globant.katari.sample=TRACE
          log4j.logger.com.globant.katari.editablepages=TRACE
        </${clientName}_${projectName}.log4j>
      </properties>
    </profile>
  </profiles>
  <!-- vim: set ts=2 et sw=2 ai: -->
</settings>

