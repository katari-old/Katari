<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:katari="http://www.globant.com/schema/katari"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
      http://www.globant.com/schema/katari
      http://www.globant.com/schema/katari/katari.xsd">

  <!-- setup wicket application -->
  <bean id="wicket.application"
      class="com.globant.katari.sample.wicket.SampleApplication">
    <constructor-arg index="0" >
      <ref bean="debugMode" />
    </constructor-arg>
  </bean>

  <bean id="messageSource"
      class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>com.globant.katari.sample.wicket.messages</value>
      </list>
    </property>
  </bean>

  <!-- Commands -->
  <bean name="userFilterCommand" scope="prototype"
      class="com.globant.katari.sample.user.application.UserFilterCommand" >
    <constructor-arg index="0" >
      <ref bean="user.userRepository" />
    </constructor-arg>
  </bean>

  <bean name="createUserCommand" scope="prototype"
      class="com.globant.katari.sample.user.application.SaveUserCommand" >
    <constructor-arg index="0" >
      <ref bean="user.userRepository" />
    </constructor-arg>
    <constructor-arg index="1" >
      <ref bean="role.roleRepository" />
    </constructor-arg>
    <constructor-arg index="2" >
      <ref bean="profile" />
    </constructor-arg>
    <constructor-arg index="3" >
      <ref bean="password" />
    </constructor-arg>
  </bean>

  <bean id='profile' scope='prototype'
    class="com.globant.katari.sample.user.application.Profile"/>

  <bean id='password' scope='prototype'
    class="com.globant.katari.sample.user.application.Password"/>

  <bean name="deleteUserCommand" scope="prototype"
      class="com.globant.katari.sample.user.application.DeleteUserCommand" >
    <constructor-arg index="0" >
      <ref bean="user.userRepository" />
    </constructor-arg>
  </bean>
</beans>

